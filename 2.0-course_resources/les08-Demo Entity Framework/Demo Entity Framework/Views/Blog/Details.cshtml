@model PostDetailsViewModel

@{
    ViewData["Title"] = "Post Details";
}

<h1>@Model.Post.Titel</h1>
<p>@Model.Post.Inhoud</p>

<h3>Comments</h3>

@foreach (var comment in Model.Post.Comments)
{
        <div>
            <p>@comment.Inhoud</p>
            <p>Geschreven door @comment.Auteur</p>
        </div>
}

<h4>Nieuwe Comment</h4>
<form asp-action="Details" asp-controller="Blog">
    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea asp-for="Comment" rows="5" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Auteur"></label>
        <input asp-for="Auteur" class="form-control"></input>
        <span asp-validation-for="Auteur" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button class="btn btn-primary">Verstuur</button>
    </div>
</form>